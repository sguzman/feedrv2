{
  "$id": "file://schemas/table.schema.json",
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "SQL table (flat TOML)",
  "type": "object",

  "properties": {
    "table_name": { "type": "string" }
  },
  "required": ["table_name"],

  "additionalProperties": { "$ref": "#/definitions/column" },

  "definitions": {
    "column": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "int", "integer", "smallint", "bigint",
            "real", "float", "double", "decimal",
            "bool", "boolean",
            "text", "varchar", "char",
            "date", "time", "datetime", "timestamp",
            "blob", "uuid"
          ]
        },
        "nullable":       { "type": "boolean" },
        "primary":        { "type": "boolean" },
        "unique":         { "type": "boolean" },
        "autoincrement":  { "type": "boolean" },
        "default":        { "type": ["string", "number", "boolean", "null"] }
      },
      "required": ["type"],
      "additionalProperties": false,

      "allOf": [
        {
          "if": { "properties": { "primary": { "const": true } }, "required": ["primary"] },
          "then": {
            "properties": {
              "unique":   { "const": true },
              "nullable": { "const": false }
            }
          }
        },
        {
          "if": { "properties": { "autoincrement": { "const": true } }, "required": ["autoincrement"] },
          "then": {
            "properties": {
              "type": { "enum": ["int", "integer", "smallint", "bigint"] }
            }
          }
        }
      ]
    }
  }
}
